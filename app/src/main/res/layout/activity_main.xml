<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.iltwats.beziercurve.BezierCurveView
        android:id="@+id/bezierCurveView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/p1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="236dp"
        android:rotation="-47"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/p2"
        app:layout_constraintTop_toBottomOf="@+id/p2"
        app:layout_constraintVertical_bias="0.219" />

    <SeekBar
        android:id="@+id/p3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="4dp"
        android:rotation="80"
        app:layout_constraintBottom_toTopOf="@+id/p2"
        app:layout_constraintEnd_toEndOf="@+id/p2"
        app:layout_constraintTop_toTopOf="@+id/bezierCurveView"
        app:layout_constraintVertical_bias="0.687" />

    <SeekBar
        android:id="@+id/p2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="276dp"
        android:rotation="182"
        app:layout_constraintEnd_toEndOf="@+id/bezierCurveView"
        app:layout_constraintTop_toTopOf="@+id/bezierCurveView" />
</androidx.constraintlayout.widget.ConstraintLayout>